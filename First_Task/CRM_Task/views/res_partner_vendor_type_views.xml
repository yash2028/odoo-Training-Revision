<?xml version="1.0" encoding="UTF-8" ?>
<odoo>
    <record model="ir.ui.view" id="res_partner_vendor_type_tree_view">
        <field name="name">res.partner.vendor.type.tree.view</field>
        <field name="model">res.partner.vendor.type</field>
        <field name="arch" type="xml">
            <tree editable="top">
                <field name="name"/>
                <field name="description"/>
            </tree>
        </field>
    </record>

    <record model="ir.actions.act_window" id="action_vendor_type">
        <field name="name">Vendor Type</field>
        <field name="res_model">res.partner.vendor.type</field>
        <field name="view_mode">tree</field>
    </record>

    <menuitem name="CRM Task" id="menu_crm_task" action="action_vendor_type"/>

    <menuitem name="Vendor Type" id="menu_vendor_type" action="action_vendor_type" parent="menu_crm_task"/>

    <record id="CRM_Task.menu_vendor_type" model="ir.ui.menu">
    	<field name="name">Vendors Type</field>
    	<field name="sequence">2</field>
    	<field name="parent_id" ref="purchase.menu_purchase_config"/>
    </record>
</odoo>