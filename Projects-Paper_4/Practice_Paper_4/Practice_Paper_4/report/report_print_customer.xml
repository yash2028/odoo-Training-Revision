<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <template id="report_custom_template">
        <t t-call="web.basic_layout">
            <div class="page">
                <div class="row">
                    <div class="col-12">
                        <h2>Custom Report</h2>
                    </div>
                </div>
                <table>
                    <thead>
                        <tr>
                            <th>Contact Name</th>
                            <th>Contact Details</th>
                            <th>Address</th>
                        </tr>
                    </thead>
                    <tbody>
                        <tr t-foreach="docs" t-as="o">
                            <td><t t-esc="o.partner_id.name"/></td>
                            <td><t t-esc="o.partner_id.details"/></td>
                            <td><t t-esc="o.partner_id.address"/></td>
                        </tr>
                    </tbody>
                </table>
            </div>
        </t>
    </template>

    <record id="action_report_employee_info" model="ir.actions.report">
        <field name="name">Customer Details</field>
        <field name="model">search_customer</field>
        <field name="report_type">qweb-pdf</field>
        <field name="report_name">Practical_Paper_4.report_employee_info</field>
        <field name="report_file">Practical_Paper_4.report_employee_info</field>
        <field name="print_report_name">'Customer Detail'</field>
<!--        <field name="binding_model_id" ref="model_employee_info"/>-->
        <field name="binding_type">report</field>
    </record>

</odoo>
