<?xml version="1.0" encoding="UTF-8" ?>
<odoo>
    <record model="ir.ui.view" id="project_project_tab_form_view">
        <field name="name">project.project.tab.form.view</field>
        <field name="model">project.project</field>
        <field name="inherit_id" ref="project.edit_project"/>
        <field name="arch" type="xml">
            <xpath expr="//page[@name='settings']" position="after">
                    <page name="planning" string="Planning">
                        <group>
                            <field name="hours_total"/>
                            <field name="hours_total_planned"/>
                        </group>
                        <field name="planning_line_ids"/>
                    </page>
            </xpath>
        </field>
    </record>
</odoo>