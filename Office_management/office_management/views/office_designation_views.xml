<?xml version="1.0" encoding="UTF-8" ?>
<odoo>
    <record model="ir.ui.view" id="office_designation_tree_view">
        <field name="name">office.designation.tree.view</field>
        <field name="model">office.designation</field>
        <field name="arch" type="xml">
            <tree>
                <field name="designation_name"/>
            </tree>
        </field>
    </record>

    <record model="ir.ui.view" id="office_designation_form_view">
        <field name="name">office.designation.form.view</field>
        <field name="model">office.designation</field>
        <field name="arch" type="xml">
            <form>
                <sheet>
                    <group>
                        <group>
                            <field name="designation_name"/>
                        </group>
                    </group>
                </sheet>
            </form>
        </field>
    </record>


    <record model="ir.actions.act_window" id="action_office_designation">
        <field name="name">Designation</field>
        <field name="res_model">office.designation</field>
        <field name="view_mode">tree,form</field>
    </record>

    <menuitem name="Designation" action="action_office_designation" id="menu_office_designation" parent="menu_main_office_management"/>
</odoo>