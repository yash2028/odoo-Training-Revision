<?xml version="1.0" encoding="UTF-8" ?>
<odoo>
    <record model="ir.ui.view" id="employee_info_tree_view">
        <field name="name">employee.info.tree.view</field>
        <field name="model">employee.info</field>
        <field name="arch" type="xml">
            <tree>
                <field name="first_name"/>
                <field name="last_name"/>
                <field name="name"/>
                <field name="mobile_no"/>
                <field name="designation_id" string="Designation"/>
                <field name="email"/>
<!--                <field name="email"/>-->
<!--                <field name="website"/>-->
                <field name="date_of_birth"/>
                <field name="gender"/>
                <field name="image"/>
                <field name="position"/>
                <field name="shift_time" widget="badge"/>
                <field name="salary"/>
                <field name="date_of_joining"/>
                <field name="department_id" widget="badge" decoration-warning="department_id == 4" decoration-success="department_id == 5"/>
<!--                <field name="emp_skill_ids" widget="many2many_tags"/>-->
                <field name="emp_skill_ids" widget="many2many_tags" class="oe_inline"
                                   options="{'color_field': 'color', 'no_create_edit': True}"/>
                <field name="office_id"/>
                <field name="country_id"/>
            </tree>
        </field>
    </record>

    <record model="ir.ui.view" id="employee_info_form_view">
        <field name="name">employee.info.form.view</field>
        <field name="model">employee.info</field>
        <field name="arch" type="xml">
            <form>
                <header>
                    <button name="search_employee" type="object" class="oe_highlight" string="search"/>
                    <button name="browse_employee" type="object" class="oe_highlight" string="Browse"/>
                    <field name="status" widget="statusbar" class="oe_highlight" clickable="1"/>
                </header>
                <sheet>
                    <group>
                        <group>
                            <field name="first_name"/>
                            <field name="name" force_save="1"/>
                            <field name="email"/>
                            <!-- <field name="partner_id"/>
                            <field name="date_of_birth"/>
                            <field name="email"/>
                             <field name="is_employee"/>
<!-                           <field name="email"/>-->
<!--                            <field name="website"/>-->
                            <field name="image"/>
                            <field name="shift_time"/>
                            <field name="date_of_joining"/>
                            <field name="office_id"/>
<!--                            <field name="emp_skill_ids" widget="many2many_tags"/>-->
                            <field name="emp_skill_ids" widget="many2many_tags" class="oe_inline"
                                   options="{'color_field': 'color'}"/>
                        </group>
                        <group>
                            <field name="last_name"/>
                            <field name="mobile_no"/>
<!--                            <field name="email"/>-->
                            <field name="gender" widget="radio"/>
                            <field name="work_days"/>
<!--                            <field name="is_employee"/>-->
                            <field name="salary"/>
                             <field name="country_id"/>
                            <field name="department_id"/>
                            <field name="designation_id" string="Designation"/>
                            <field name="position"/>

                        </group>
                    </group>
                </sheet>
            </form>
        </field>
    </record>


<!--  Make  action  -->
    <record model="ir.actions.act_window" id="action_employee_info">
        <field name="name">Employee Info</field>
        <field name="res_model">employee.info</field>
        <field name="view_mode">tree,form</field>

    </record>


<!--  Making a Parent Menu  -->

    <menuitem name="Office Management" id="menu_office_management"/>

<!--  Making a Child Menu  -->

    <menuitem name="Employee" id="menu_main_employee" parent="menu_office_management"/>

    <menuitem name="Employee Info" action="action_employee_info" id="menu_employee_info" parent="menu_main_employee"/>

