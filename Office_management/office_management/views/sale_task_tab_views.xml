<?xml version="1.0" encoding="UTF-8" ?>
<odoo>
    <record model="ir.ui.view" id="sale_task_tab_form_view">
        <field name="name">sale.task.tab.form.view</field>
        <field name="model">sale.order</field>
        <field name="inherit_id" ref="sale.view_order_form"/>
        <field name="arch" type="xml">
            <xpath expr="//notebook/page[@name='order_lines']" position="after">
                <page name="Commission" string="Commission">
                    <group>
                        <field name="commission_type"/>
                        <field name="commission_amount"/>
                        <field name="commission_agent_id"/>
                    </group>
                </page>
            </xpath>
        </field>
    </record>


</odoo>
